{
  "name": "berlioz/router",
  "type": "library",
  "description": "Berlioz Router is a PHP library for manage HTTP routes, respecting PSR-7 (HTTP message interfaces) standard.",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Router\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Router\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.1",
    "ext-mbstring": "*",
    "ext-json": "*",
    "berlioz/http-message": "^1.1",
    "berlioz/php-doc": "^1.0",
    "psr/log": "^1.0"
  },
  "suggest": {
    "ext-apache": "To get HTTP headers with Apache Web Server"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4 || ^8.0 || ^9.0"
  }
}
